<%= form_for(@zombie, :remote => true) do |f| %>
  <div id="error_explanation">
  </div>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name , :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :bio %><br />
    <%= f.text_area :bio,  :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :age %><br />
    <%= f.text_field :age,  :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
